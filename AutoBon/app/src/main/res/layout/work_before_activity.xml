    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/main_orange"/>

        <TextView
            android:id="@+id/order_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgray"
            android:background="@android:color/white"
            android:textSize="@dimen/sp15"
            android:layout_marginTop="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp5"
            android:paddingBottom="@dimen/dp5"
            android:text="@string/upload_work_photo"
            android:singleLine="true"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <RelativeLayout
            android:id="@+id/rl_default_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp160"
            android:background="@android:color/white">
            <ImageView
                android:id="@+id/iv_car_upload_photo"
                android:layout_width="@dimen/dp190"
                android:layout_height="@dimen/dp120"
                android:background="@color/lightgray"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>
            <ImageView
                android:layout_width="@dimen/dp150"
                android:layout_height="@dimen/dp80"
                android:src="@mipmap/work_car"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/iv_camera"
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:src="@mipmap/large_camera"
                android:scaleType="centerCrop"
                android:layout_alignBottom="@id/iv_car_upload_photo"
                android:layout_alignRight="@id/iv_car_upload_photo"
                android:layout_marginBottom="-10dp"
                android:layout_marginRight="-10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_single_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:visibility="gone"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10">
            <GridView
                android:id="@+id/gv_single_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:verticalSpacing="@dimen/dp20"
                android:listSelector="@android:color/transparent"
                android:gravity="center"
                android:stretchMode="columnWidth"
                android:horizontalSpacing="@dimen/dp20">
            </GridView>
        </RelativeLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"/>
    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft ="@dimen/dp35"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp20"
        android:paddingTop="@dimen/dp12"
        android:paddingBottom="@dimen/dp12"
        android:text="@string/next_btn"
        android:gravity="center"
        android:textSize="@dimen/sp18"
        android:background="@drawable/login_btn_selector"
        android:textColor="@android:color/white"/>
</LinearLayout>