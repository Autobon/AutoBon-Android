<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_white"
    tools:context="cn.com.incardata.autobon.AuthorizeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:background="@color/main_orange">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp35"
            android:layout_height="match_parent"
            android:padding="@dimen/dp10"
            android:src="@mipmap/default_back"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/start_authorization"
            android:textSize="@dimen/sp18"
            android:textColor="@android:color/white"/>

        <ImageView
            android:layout_width="@dimen/dp45"
            android:layout_height="match_parent"
            android:padding="@dimen/dp10"
            android:src="@mipmap/emit"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/dp10"
                android:background="@android:color/white"
                android:layout_height="@dimen/dp100">

                <cn.com.incardata.view.CircleImageView
                    android:id="@+id/header_image"
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    circle:border_width="0dp"
                    circle:border_color="#00000000"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/user_hint"/>
                <ImageView
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:src="@mipmap/small_camera"
                    android:layout_alignBottom="@id/header_image"
                    android:layout_alignRight="@id/header_image"
                    android:scaleType="centerInside"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/header_image"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/dp20"
                    android:layout_marginLeft="@dimen/dp20">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/sp15"
                        android:background="@null"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:paddingTop="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5"
                        android:textColorHint="@color/lightgray"
                        android:hint="@string/name"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_color"/>

                    <EditText
                        android:id="@+id/IDNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/sp15"
                        android:background="@null"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:inputType="text"
                        android:digits="@string/digits_indentify_number"
                        android:paddingTop="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp5"
                        android:textColorHint="@color/lightgray"
                        android:hint="@string/identify_number"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_color"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_height="match_parent"
                    android:background="@color/main_orange"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkgray"
                    android:background="@android:color/white"
                    android:textSize="@dimen/sp15"
                    android:layout_marginTop="@dimen/dp10"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingTop="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="@string/skill_item"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/skill_item_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/darkgray"
                    android:text="@string/skill_item_1"
                    android:padding="@dimen/dp5"
                    android:gravity="center"
                    android:background="@drawable/skill_off"/>

                <TextView
                    android:id="@+id/skill_item_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/darkgray"
                    android:text="@string/skill_item_2"
                    android:layout_marginLeft="@dimen/dp5"
                    android:padding="@dimen/dp5"
                    android:gravity="center"
                    android:background="@drawable/skill_off"/>
                <TextView
                    android:id="@+id/skill_item_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/darkgray"
                    android:layout_marginLeft="@dimen/dp5"
                    android:text="@string/skill_item_3"
                    android:padding="@dimen/dp5"
                    android:gravity="center"
                    android:background="@drawable/skill_off"/>
                <TextView
                    android:id="@+id/skill_item_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/darkgray"
                    android:text="@string/skill_item_4"
                    android:layout_marginLeft="@dimen/dp5"
                    android:padding="@dimen/dp5"
                    android:gravity="center"
                    android:background="@drawable/skill_off"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_height="match_parent"
                    android:background="@color/main_orange"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkgray"
                    android:background="@android:color/white"
                    android:textSize="@dimen/sp15"
                    android:layout_marginTop="@dimen/dp10"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingTop="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="@string/identify_photo"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp130"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/identify_photo"
                    android:layout_width="@dimen/dp190"
                    android:layout_height="@dimen/dp120"
                    android:background="#eeeeee"
                    android:src="@mipmap/user_hint"
                    android:scaleType="centerInside"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:src="@mipmap/large_camera"
                    android:scaleType="centerInside"
                    android:layout_alignBottom="@id/identify_photo"
                    android:layout_alignRight="@id/identify_photo"
                    android:layout_marginBottom="-3dp"
                    android:layout_marginRight="-12dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_height="match_parent"
                    android:background="@color/main_orange"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkgray"
                    android:background="@android:color/white"
                    android:textSize="@dimen/sp15"
                    android:layout_marginTop="@dimen/dp10"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingTop="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:text="@string/bank_card_info"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <Spinner
                    android:id="@+id/carInfo_brand"
                    android:layout_width="@dimen/dp200"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@drawable/spinner_bg"
                    android:spinnerMode="dropdown" />

                <EditText
                    android:id="@+id/bank_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp40"
                    android:layout_marginRight="@dimen/dp40"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/sp15"
                    android:background="@null"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:inputType="number"
                    android:paddingTop="@dimen/dp5"
                    android:paddingBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:textColorHint="@color/lightgray"
                    android:hint="@string/bank_number"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp40"
                    android:layout_marginRight="@dimen/dp40"
                    android:background="@color/line_color"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp40"
                    android:layout_marginRight="@dimen/dp40"
                    android:gravity="left"
                    android:textSize="@dimen/sp10"
                    android:textColor="@color/gray_A3"
                    android:text="@string/please_verify_bank_card_number"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"/>
            </LinearLayout>

            <Button
                android:id="@+id/submit"
                style="@style/LoginButtonStyle"
                android:text="@string/submit"
                android:layout_marginTop="@dimen/dp10"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp20"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp10"
                    android:textColor="#a3a3a3"
                    android:text="@string/authorize_agreement_1"/>

                <TextView
                    android:id="@+id/authorize_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp10"
                    android:textColor="@color/main_orange"
                    android:text="@string/authorize_agreement_2"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
