<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:background="@color/main_orange">

        <ImageView
            android:id="@+id/iv_my_info"
            android:layout_width="@dimen/dp45"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:paddingTop="@dimen/dp10"
            android:scaleType="centerInside"
            android:src="@mipmap/img_account_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp18" />

        <ImageView
            android:id="@+id/iv_enter_more_page"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/dp10"
            android:scaleType="centerInside"
            android:src="@mipmap/emit" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tv_week_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_toRightOf="@id/tv_day"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tv_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp15"
            android:text="@string/finish_mode_text"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp15" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200"
        android:background="@android:color/white">
        <GridView
            android:id="@+id/gv_single_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:verticalSpacing="@dimen/dp20"
            android:listSelector="@android:color/transparent"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:horizontalSpacing="@dimen/dp20">
        </GridView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp10"
        android:background="@android:color/white">

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/main_orange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/sp15"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_gravity="center_vertical"
            android:text="@string/choose_work_item_text"
            android:singleLine="true"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp15">
        <RadioButton
            android:id="@+id/five_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="五座车"
            android:button="@drawable/radio_selector"
            android:textSize="@dimen/sp15"
            android:textColor="@color/darkgray"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/seven_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="七座车"
            android:button="@drawable/radio_selector"
            android:layout_marginLeft="@dimen/dp20"
            android:textSize="@dimen/sp15"/>
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray"/>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200">
    </FrameLayout>

    <Button
        android:id="@+id/finish_work_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft ="@dimen/dp35"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp20"
        android:paddingTop="@dimen/dp12"
        android:paddingBottom="@dimen/dp12"
        android:text="@string/text_login"
        android:gravity="center"
        android:textSize="@dimen/sp18"
        android:background="@drawable/login_btn_selector"
        android:textColor="@android:color/white"/>
</LinearLayout>