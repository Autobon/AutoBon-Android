<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 填充 -->
    <solid android:color="@color/main_white" /> <!-- 定义填充的颜色值 -->

    <!-- 描边 -->
    <stroke
        android:width="1dp"
        android:color="@color/lightgray" /> <!-- 定义描边的宽度和描边的颜色值 -->

    <!-- 圆角 -->
    <corners
        android:bottomLeftRadius="@dimen/dp10"
        android:bottomRightRadius="@dimen/dp10"
        android:topLeftRadius="@dimen/dp10"
        android:topRightRadius="@dimen/dp10" /> <!-- 设置四个角的半径 -->

    <!-- 间隔 -->
    <padding
        android:bottom="@dimen/dp10"
        android:left="@dimen/dp10"
        android:right="@dimen/dp10"
        android:top="@dimen/dp10" /> <!-- 设置各个方向的间隔 -->
</shape>